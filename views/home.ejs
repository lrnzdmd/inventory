<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet" type="text/css" />
    <title>Home</title>
  </head>
  <body
    class="flex flex-col h-screen items-center bg-slate-800 text-zinc-50 gap-4"
  >
  <div class="flex justify-between w-full h-16 p-4 bg-slate-700 items-center">
    <a href="/" class="text-2xl font-bold self-start">
        Music Store Inventory
      </a>
      <div class="flex justify-center items-center gap-2">
      <div class="dropdown dropdown-hover">
        <div tabindex="0" role="button" class="btn btn-outline m-1 text-zinc-50">Categories</div>
        <ul tabindex="0" class="dropdown-content menu bg-slate-700 border border-zinc-50 rounded-box z-[1] w-fit p-2 shadow">
          <li><a>Guitars</a></li>
          <li><a>Basses</a></li>
        </ul>
      </div>
      <a class="btn btn-outline text-zinc-50">New Item</a>
    </div>
  </div>
  <h2 class="text-2xl font-semibold mb-4">All Products</h2>
 <div class="flex flex-wrap w-full justify-center items-center gap-4 overflow-auto mb-6">
    
    
    <% items.forEach(item => { %>
        
      <%- include('productCard', {item:item}) %>  


    <%})  %>
    

 </div>
  









  </body>
</html>
